{
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },

  "extends": "airbnb-base",

  "rules": {
    "import/prefer-default-export": "off",
    "import/no-dynamic-require": "off",

    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "ignore"
    }],
    "global-require": "off",
    "no-console": "off",
    "prefer-template": "off"
  }
}
